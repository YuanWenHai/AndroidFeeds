<?xml version="1.0" encoding="utf-8"?>

<FrameLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/dan_lew_list_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/dan_lew_list_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
        </android.support.v4.widget.SwipeRefreshLayout>
    <com.bartoszlipinski.recyclerviewheader2.RecyclerViewHeader
        android:id="@+id/dan_lew_list_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/dan_lew_list_parallax"
            android:fitsSystemWindows="true"
            android:background="@color/dan_lew_color"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_collapseMode="parallax">
            <ImageView
                android:id="@+id/logo"
                android:layout_centerVertical="true"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/danlew_logo"/>
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dan_lew"
                android:layout_toEndOf="@id/logo"
                android:layout_alignTop="@id/logo"
                android:layout_marginStart="30dp"
                android:textSize="25sp"
                android:textColor="@color/dan_lew_50"/>
            <TextView
                android:layout_below="@id/title"
                android:layout_toEndOf="@id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/dan_lew_100"
                android:text="@string/dan_lew_info"/>
        </RelativeLayout>
    </com.bartoszlipinski.recyclerviewheader2.RecyclerViewHeader>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/list_status_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/status_bar_size"/>
        <android.support.v7.widget.Toolbar
            android:id="@+id/list_toolbar"
            android:layout_width="match_parent"
            android:background="@color/dan_lew_color"
            android:layout_height="?attr/actionBarSize"/>
    </LinearLayout>
    </FrameLayout>