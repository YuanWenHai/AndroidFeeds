<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/styling_android_list_refresh_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/styling_android_list_recycler_view"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </android.support.v4.widget.SwipeRefreshLayout>

            <com.bartoszlipinski.recyclerviewheader2.RecyclerViewHeader
                android:id="@+id/styling_android_list_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/list_parallax"
                    android:background="@color/styling_android_color"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/styling_android_parallax_height">
                    <View
                        android:id="@+id/margin"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/header_margin"/>
                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="5dp"
                        android:layout_below="@id/margin"
                        android:src="@drawable/styling_android_logo"/>
                    <TextView
                        android:id="@+id/styling_android_title"
                        android:layout_width="wrap_content"
                        android:layout_below="@id/margin"
                        android:layout_height="wrap_content"
                        android:text="@string/styling_android"
                        android:layout_toEndOf="@id/logo"
                        android:textColor="@color/styling_android_50"
                        android:textSize="25sp"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/logo"
                        android:padding="5dp"
                        android:layout_below="@id/styling_android_title"
                        android:text="@string/styling_android_info"
                        android:textColor="@color/styling_android_100"/>
                </RelativeLayout>
            </com.bartoszlipinski.recyclerviewheader2.RecyclerViewHeader>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/list_status_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/status_bar_size"/>
        <android.support.v7.widget.Toolbar
            android:id="@+id/list_toolbar"
            android:layout_width="match_parent"
            android:background="@color/styling_android_color"
            android:layout_height="?attr/actionBarSize"/>
    </LinearLayout>
</FrameLayout>